<h1>New Landmark</h1>

<form action="/landmarks/new" method="post">
	<label for="landmark_name">Name:</label>
	<input type="text" name="landmark[name]" id="landmark_name">
	<label>Select existing Figure</label>
	<%Figure.all.each do |figure|%>
		<input type="radio" name="landmark[figure]" id="figure.id" value="figure.id"><%=figure.name%></input>
	<%end%>
	<label>Or create new figure</label>
	<input type="text" name="figure[name]" id="Figure Name">
	<label for="landmark_year_completed">Year Completed:</label>
	<input type="text" name="landmark[year_completed]" id="landmark_year_completed">
	<input type="submit" name="submit" value="Create New Landmark">
</form>